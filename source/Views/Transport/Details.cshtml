    <form asp-action="Order" asp-route-id="@Model.id" asp-route-redirectUrl="/transport/details/@Model.id" method="post" class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">@Model.title</h5>

          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div  class="fields">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
