@model source.Models.Account;

@{
    var roles = ViewBag.roles as List<Role>;
}
<div class="col-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Details Account</h4>
            <form class="forms-sample" asp-action='Update' method="post" asp-route-id="@Model.id">
                <div class="form-group">
                    <label asp-for='@Model.userName'></label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name"
                        asp-for='@Model.userName' />
                    <span asp-validation-for='@Model.userName' class="bg-danger text-white my-1 d-block"></span>
                </div>
                <div class="form-group">
                    <label asp-for='@Model.email'>Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email"
                        asp-for='@Model.email' />
                    <span asp-validation-for='@Model.email' class="bg-danger text-white my-1 d-block"></span>

                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="password"
                        name="password" />
                </div>

                <div class="form-group">
                    <label for="exampleSelectGender">Roles</label>
                    <select name="role" class="form-control" id="exampleSelectGender">
                        @if (roles != null)
                        {
                            foreach (var item in roles)
                            {
                                <option value="@item.id">@item.RoleName</option>
                            }
                        }
                    </select>
                </div>


                <button type="submit" class="btn btn-primary mr-2">
                    Update
                </button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
