@model source.Models.Visa;


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tạo Visa</h4>
            <form class="forms-sample" enctype="multipart/form-data" asp-action='create' method="post">
                <div class="form-group">
                    <label asp-for='@Model.title'></label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name"
                        asp-for='@Model.title' />
                    <span asp-validation-for='@Model.title' class="text-danger  my-1 d-block"></span>
                </div>

                 <div class="form-group">
                    <label>Hình Ảnh Hiển Thị: </label>
                    <input  class="form-control" id="exampleInputName1" required placeholder="Name"
                        type="file" name="mainImg" />
                </div>
               
                 <div class="form-group">
                    <label>Thông Tin: </label>
                    <textarea name="info" id="infoTour" cols="30" rows="10"></textarea>
                </div>


                <button type="submit" class="btn btn-primary mr-2">
                    Submit
                </button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

<script>
     
        CKEDITOR.replace("infoTour", {
            filebrowserBrowseUrl: '@Url.Content("~/lib/elfinder/elfinder.html")',
        });
       
</script>
