@model IEnumerable<source.Models.Hotel>;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Account</h4>
            <a asp-action="create"
                class="btn btn-primary btn-rounded btn-icon d-flex align-items-center justify-content-center">
                <i class="mdi mdi-account-plus"></i>
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                             <th>
                                Hình Ảnh Hiển Thị
                            </th>
                            <th>
                                Tiêu Đề
                            </th>
                            <th>
                                Giá
                            </th>
                            <th>
                                Thời gian mở cửa
                            </th>

                            <th>
                                Địa Điểm 
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="/files/@item.mainImg" alt="">
                                    </td>
                                    <td>
                                        @item.location
                                    </td>

                                    <td>
                                        @item.price
                                    </td>

                                     <td>
                                        @item.openTime
                                    </td>

                                    <td>
                                        @item.location
                                    </td>

                                    <td class="d-flex">
                                        <form asp-route-id="@item.id" asp-action="Delete" method="post" class="mr-2">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                        <a asp-action='Details' asp-route-id="@item.id" class="btn btn-info btn-sm">Details</a>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>